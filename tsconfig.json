{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "target": "es5",
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ],
        "outDir": "build"
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "/node_modules",
        "/node_modules*",
        "node_modules/@types/es6-promise/index.d.ts",
        "node_modules/@types/musicmetadata/musicmetadata.d.ts"
    ]
}